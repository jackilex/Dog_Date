extends layouts/main.pug

block content
	// include includes/nav.pug
	
	div(class="uk-container uk-grid uk-grid-column-medium", id="main")
		div(class="uk-width-1-1@s uk-width-1-4@m uk-width-1-5@l uk-flex uk-flex-column section", id="userArea")
			div(class="uk-panel uk-panel-box", id="user")
				div(id="profileImage")= userLetter
				h3(class="uk-text-center")= welcomeMessage
				button(id="logoutBtn", class="uk-button uk-button-danger") Logout
				a(id="addPetsBtn", class="uk-button uk-button-primary", href="/pets/add") Add a Pet
				block userPets
			h4(id="currentDate", class="headerText weatherEl") Current Weather
			div(class="weatherE1", id="currentWeather")
				div(class="uk-flex uk-width-2-3@s uk-align-center icon-temp")
					div(class="uk-width-1-2")
						img(id="weather-icon", alt="")
				div(id="temp", class="uk-width-1-2 uk-text-justify")
			
			div(class="forecast-desc")

			div(id="humidity")
			div(id="wind")
			div(id="uv-index")

		div(class="uk-width-1-1@s uk-width-3-4@m uk-width-4-5@l section", id="mainArea")
			div(class="uk-section infoSections uk-flex section uk-margin")
					div(class="uk-flex-center uk-grid weatherEl")
						each val in pets
							div(class="")
								h2= val.petName
								h4= val.petAge
								h4= val.petBreed
								h4= val.petGender

						
			div(class="uk-section infoSections uk-flex mapArea section")
				div(class="mapInner")
					p Select a park from the map or the list below to view more details
				
					form(id="radiusOptions", class="uk-width-1-1@m", uk-margin)
						div(class="uk-inline")
							label(for="radius", id="display")
						div(class="uk-inline")
							select(class="uk-select uk-form-small", id="distance", name="radius", type="text")
								option(value="8050", id="fiveMiles") 5 Miles
								option(value="1600", id="tenMiles") 10 Miles
								option(value="32000", id="twentyMiles") 20 Miles
								option(value="48000", id="thirtyMiles") 30 Miles
						button(class="uk-button uk-button-primary uk-button-small", id="submit", type="submit")
					
					div(id="map", class="uk-width-1-1@s uk-width-3-4@m")
			
			div(class="uk-section infoSections uk-flex uk-text-center parkInfoArea section")
				div(id="parkList", class="uk-width-1-1@s uk-width-1-3@m")
					h3(class="headerText") List of nearby parks
					div(id="searchResult", class="uk-overflow-auto uk-height-1-1")
				div(id="parkDetails", class="uk-width-1-1@s uk-width-2-3@m")
					h3(class="headerText") Park Details
					div(id="parkInfo", class="uk-overflow-auto uk-height-1-1")

			div(id="forecast_div", class="uk-grid-column-small uk-flex-center weatherEl uk-grid uk-grid-stack", uk-grid)


block localScripts
	script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.26.0/moment.min.js", type="text/javascript")
	script(src="./assets/scripts/logout.js", type="text/javascript")
	script(src="./assets/scripts/map.js", type="text/javascript")
	script(src="./assets/scripts/home.js", type="text/javascript")
	