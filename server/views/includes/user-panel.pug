div(class="cell medium-3 large-2 noMarginTop sidePanels" id="userArea" )

        div(class="panel-radius" id="user")

            //Start user card
            div(class="card-user-container")

                // card's image
                div(class="card-user-avatar")
                    a(href="/profile")
                        img(src= ""+ user.profileImg, alt="" class="profile-image")
                
                    //user info, pet, and location
                div(class="card-user-bio")
                    h4 Hi, 
                        span(id="username")= user.username
                            
                    p  
                        // Unnecessary logic
                        //if numPets == 1 
                            span(id="pets")= user.numPets + " "
                                span fur baby!
                        //else if numPets <= 1
                        
                            h6 Such empty! Add a pet. 
                        //else 
                            span(id="pets")= user.numPets + " "
                                span fur babies!
                        span(id="pets")= user.numPets + " "
                            span fur babies!
                        </p>
            
                    //User's registered pets
                div(class="card-user-pets")
                    ul(class="menu", id="petCards")
                        each val in pets
                            li(class="fa fa-paw" #id="totalPets" data-id= val.id)= val.petName
                        else 
                            li(class="far fa-sad-tear") Such empty. Why no pets?

                div(class="add-pets text-center")
                    button(class="hollow center expanded button" href="#") 
                        a(id="addPetsBtn", href="/pets/add") Add a Pet
                    
                    
                hr

        div(class="panel-radius hide-for-small-only" id="weather")

            //-     | Current Weather 
            h5(id="currentDate")
        
                //- <!--   Current weather goes here  -->
        
            .weatherEl#currentWeather
                div(class="grid-x ")
                    p(class="cell small-4 medium-6 currentTempInfo")
                        span(id="temp")
                    img(class="cell small-4 medium-6" id="weather-icon" alt="")
                    
                p Humidity: 
                    span(id="humidity")
                p Wind Speed: 
                    span(id="wind")
                p UV Index: 
                    span(id="uv-index")
                p
                    a(class="smallPrint" href="/weather" alt="") View 6-day forecast
